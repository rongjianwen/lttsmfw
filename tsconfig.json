{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es6", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noErrorTruncation": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext",
        "jsx": "react",
        "typeRoots": ["./node_modules/@types"],
        "sourceMap": true,
        "types": ["node"]
    },
    "exclude": ["./dist", "node_modules"]
}
